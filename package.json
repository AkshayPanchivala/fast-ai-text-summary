{
  "name": "fast-ai-text-summary",
  "version": "3.0.0",
  "description": "A fast and efficient Node.js AI-powered text summarization tool for concise and readable content, using frequency-based extractive NLP techniques.",
  "type": "module",
  "main": "./dist/cjs/TextSummarizer.js",
  "module": "./dist/esm/TextSummarizer.js",
  "types": "./dist/cjs/TextSummarizer.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/TextSummarizer.d.ts",
        "default": "./dist/esm/TextSummarizer.js"
      },
      "require": {
        "types": "./dist/cjs/TextSummarizer.d.ts",
        "default": "./dist/cjs/TextSummarizer.js"
      }
    },
    "./scorers": {
      "import": {
        "types": "./dist/esm/scorers.d.ts",
        "default": "./dist/esm/scorers.js"
      },
      "require": {
        "types": "./dist/cjs/scorers.d.ts",
        "default": "./dist/cjs/scorers.js"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "test": "jest --config jest.config.cjs",
    "build": "rimraf dist && tsc && node -e \"require('fs').writeFileSync('dist/cjs/package.json', JSON.stringify({type: 'commonjs'}))\" && tsc -p tsconfig.esm.json && node -e \"require('fs').writeFileSync('dist/esm/package.json', JSON.stringify({type: 'module'}))\"",
    "prepare": "npm run build",
    "prepublishOnly": "rimraf dist || true"
  },
  "keywords": [
    "text summarizer",
    "AI summarization",
    "text summary",
    "natural language processing",
    "NLP",
    "text analysis",
    "content simplification",
    "AI text tool",
    "fast summarizer",
    "smart summarizer",
    "extractive summarization",
    "node.js",
    "javascript",
    "chatbot",
    "content preview",
    "ai assistant",
    "document summarization",
    "sentence ranking",
    "frequency based"
  ],
  "author": "Akshay Panchivala",
  "license": "MIT",
  "bin": {
    "fast-ai-text-summary": "./dist/cjs/TextSummarizer.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE.txt",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AkshayPanchivala/fast-ai-text-summary.git"
  },
  "bugs": {
    "url": "https://github.com/AkshayPanchivala/fast-ai-text-summary/issues"
  },
  "homepage": "https://github.com/AkshayPanchivala/fast-ai-text-summary#readme",
  "dependencies": {
    "natural": "^8.1.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.0.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}